      </div>

      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <ImgCard imgsrc="projects/hypaspace-cd-release.webp" />
      </div>

      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <ImgCard imgsrc="projects/hypaspace-flyer-2.webp" />
      </div>

      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <ImgCard imgsrc="projects/hypaspace-flyer.webp" />
      </div>

      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <ImgCard imgsrc="projects/shirt.webp" />
      </div>
    </div>
  </div>
</section>
<style lang="scss">
  section {
    background-color: var(--slate-6);
    clip-path: polygon(0 0, 100% 2rem, 100% 100%, 0 100%);
    margin-top: -2rem;
  }

  .title {
    h2 {
      margin-right: 0.7rem;
    }
    svg {
      font-size: 3rem;
      color: var(--orange-10);
    }
  }

  @media (min-width: 768px) {
    section {
      clip-path: polygon(0 0, 100% 5rem, 100% 100%, 0 100%);
      margin-top: -5rem;
    }
  }

  @media (min-width: 992px) {
    .title {
      svg {
        font-size: 4rem;
      }
    }
  }
</style>
