<div class="card shadow-sm meter-container">
  <p class="text-center">Circular Meter</p>
  <div class="circularMeter">
    <div class="number">59%</div>
    <div class="progres-container">
      <div class="progress">
        <div
          class="progress-bar progress-bar-striped bg-danger"
          role="progressbar"
          style="width: 36%"
          aria-valuenow="36"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          36% Low
        </div>
      </div>
      <div class="progress">
        <div
          class="progress-bar progress-bar-striped bg-warning"
          role="progressbar"
          style="width: 52%"
          aria-valuenow="52"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          52% Average
        </div>
      </div>
      <div class="progress">
        <div
          class="progress-bar progress-bar-striped bg-info"
          role="progressbar"
          style="width: 89%"
          aria-valuenow="79"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          89% High
        </div>
      </div>
    </div>
  </div>
  <p class="text-center">Circular Meter with number showing all times</p>
  <div class="circularMeter withNumber">
    <div class="number">59%</div>
    <div class="progres-container">
      <div class="progress">
        <div
          class="progress-bar progress-bar-striped bg-danger"
          role="progressbar"
          style="width: 36%"
          aria-valuenow="36"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          36% Low
        </div>
      </div>
      <div class="progress">
        <div
          class="progress-bar progress-bar-striped bg-warning"
          role="progressbar"
          style="width: 52%"
          aria-valuenow="52"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          52% Average
        </div>
      </div>
      <div class="progress">
        <div
          class="progress-bar progress-bar-striped bg-info"
          role="progressbar"
          style="width: 89%"
          aria-valuenow="79"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          89% High
        </div>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  .meter-container {
    background-color: var(--tentoden-gray-2);
  }
  .circularMeter {
    position: relative;
    margin: 0 auto;
    width: 90px;
    height: 90px;
    background: #cdcdcd;
    color: #333;
    transition: width ease 0.2s;
    border-radius: 50px;
    cursor: pointer;
    .number {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-weight: bold;
      text-align: center;
      font-size: 30px;
      z-index: 1;
    }
    &:hover {
      width: 200px;
      .progres-container {
        display: block;
        margin: 0 35px;
        padding-top: 12px;
        transition: width ease 0.2s;
      }
    }
    .progress {
      & + .progress {
        margin-top: 10px;
      }
    }
  }

  .circularMeter .progres-container,
  .circularMeter:hover .number {
    display: none;
  }

  .withNumber {
    .number {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      line-height: 2.6;
      background-color: #fff;
      transition: left ease 0.225s;
    }
    &:hover {
      .progres-container {
        margin-left: 95px;
      }
      .number {
        left: 45px;
        display: block;
      }
    }
  }
</style>
