---
const { comment, name } = Astro.props;
---

<blockquote class="quote-card shadow-sm">
  <p>{comment}</p>
  <cite>{name}</cite>
</blockquote>

<style lang="scss">
  .quote-card {
    display: block;
    position: relative;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 1.2rem 2rem 1.2rem 3.2rem;
    box-sizing: border-box;
    border-radius: 0.375rem;
    position: relative;
    overflow: hidden;
    min-height: 400px;
    width: 100%;
    max-width: 800px;
    p {
      font-size: 1rem;
      line-height: 1.5;
      margin: 0;
      color: var(--tentoden-white-1);
    }
    cite {
      font-size: 1.125rem;
      margin-top: 0.5rem;
      display: block;
      font-weight: 500;
      color: var(--orange-9);
      opacity: 0.8;
    }
    &:before {
      font-family: Georgia, serif;
      content: open-quote;
      position: absolute;
      top: -15px;
      left: 10px;
      font-size: 5rem;
      color: rgba(238, 238, 238, 0.8);
      font-weight: normal;
    }
    &:after {
      font-family: Georgia, serif;
      content: close-quote;
      position: absolute;
      bottom: -80px;
      line-height: 100px;
      right: -10px;
      font-size: 10rem;
      color: rgba(238, 238, 238, 0.8);
      font-weight: normal;
    }
  }

  @media (min-width: 375px) {
    .quote-card {
      min-height: 350px;
      p {
        font-size: 1.1rem;
      }
    }
  }

  @media (min-width: 480px) {
    .quote-card {
      min-height: 300px;
      p {
        font-size: 1.2rem;
      }
    }
  }

  @media (min-width: 576px) {
    .quote-card {
      p {
        font-size: 1.4rem;
      }
    }
  }

  @media (min-width: 768px) {
    .quote-card {
      min-height: 220px;
    }
  }
</style>
