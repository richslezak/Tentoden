---
import Reviews from './Reviews.astro';
---

<section
  class="parallax d-flex flex-column justify-content-center align-items-center py-0 px-5 min-vh-100"
>
  <div class="parallax-content">
    <Reviews />
  </div>
</section>

<style lang="scss">
  .parallax {
    width: 100%;
    height: 100vh;
    background-image: url('/Himalayas.jpeg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    &::before {
      content: '';
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--tentoden-black-1);
      opacity: 0.7;
    }
  }
  @media (min-width: 1200px) {
    .parallax {
      background-attachment: fixed;
    }
  }
</style>
