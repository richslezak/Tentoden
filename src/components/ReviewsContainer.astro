---
import Reviews from './Reviews.astro';
---

<section
  class="parallax d-flex flex-column justify-content-center align-items-center py-0 px-5 min-vh-100"
>
  <div class="parallax-content">
    <Reviews />
  </div>
</section>

<style lang="scss">
  .parallax {
    position: relative;
    &::before {
      content: '';
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100vh;
      background-image: url('/Himalayas.jpeg');
      background-attachment: fixed;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
    &::after {
      content: '';
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--tentoden-black-1);
      opacity: 0.8;
    }
    .parallax-content {
      z-index: 3;
    }
  }
</style>
