---
interface Props {
  title?: string;
  description?: string;
  imgsrc?: string;
  href?: string;
  ribbon?: boolean;
  ribbonTitle?: string;
}

import Ribbon from './Ribbon.astro';
const { imgsrc, title, description, href, ribbon, ribbonTitle } = Astro.props;
const content = title || description;
---

<div class="card shadow-sm">
  {ribbon && <Ribbon ribbonTitle={ribbonTitle} />}
  <img src={imgsrc} alt={title} class={content && 'no-bottom-radius'} />
  {href && <a href={href} class="stretched-link" target="_blank" />}
  {
    content && (
      <div class="card-body">
        {title && <h5 class="card-title">{title}</h5>}
        {description && <p class="card-text">{description}</p>}
      </div>
    )
  }
</div>
<style>
  .card {
    border: 1px solid var(--slate-5);
  }

  img {
    border-radius: 0.275rem;
    max-width: 100%;
    height: auto;
  }

  .no-bottom-radius {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }
</style>
